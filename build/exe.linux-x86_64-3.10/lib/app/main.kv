<MainWindow>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: app.color_primary_bg
        Rectangle:
            pos: self.pos
            size: self.size
    ScreenManager:
        id: scrn_mngr
        transition: FadeTransition()
        Screen:
            name: 'scrn_auth'
            Auth:
                id: auth
        Screen:
            name: 'scrn_root_product'
            Roprod:
                id: roprod

        Screen:
            name: 'scrn_product'
            
            Product:
                id: product
        
        
        