#: import Users views.users.Users
#: import Stock views.stock.Stock
#: import Product views.product.Product

<Roprod>:
	spacing: dp(12)
	padding: [dp(32), dp(16)]
	BackBox:
		radius: [self.width*.1]
		orientation: 'vertical'
		spacing: dp(12)
		size_hint_x: .12
		bcolor: app.color_primary
		BoxLayout: 
			size_hint_y: None
			width: self.height

			padding: dp(12)
			Image:
				source:'assets/imgs/logo-dark.png'
		GridLayout:
			cols: 1
			spacing: dp(12)

			NavToggle:
				text: 'point Of Sale'
				icon: icon('icon-airplay')
				on_release: root.w()
				on_release: Product.addd(Product())
				on_release: root.ids.scrn_mngr.current = 'scrn_product'
			NavToggle:
				text: 'Manage Users'
				icon: icon('icon-users')
				on_release: root.ids.scrn_mngr.current = 'scrn_users'
			NavToggle:
				text: 'Manage Stock'
				icon: icon('icon-truck')
				on_release: root.ids.scrn_mngr.current = 'scrn_stock'
				
			
	BoxLayout:
		
		orientation: 'vertical'
		size_hint_x: .9
		spacing: dp(12)
		BoxLayout:
			size_hint_y: None
			height: dp(54)
		ScreenManager:
			id: scrn_mngr
			Screen:
				name: 'scrn_product'
				
				Product:
					id: product
			
        
			Screen:
				name: "scrn_stock"
				Stock:
					id: Stock
				
			Screen:
				name: "scrn_users"
				Users:
					id: users
<NavToggle@ToggleButtonBehavior+BoxLayout>:
	size_hint_y: None
	height: dp(48)
	text: ""
	icon: ""
	group: 'nav-items'
	spacing: dp(12)
	AnchorLayout:
		
		anchor_y: "center"
		size_hint_x: None
		width: dp(4)
		Widget:
			size_hint_y: .6
			canvas.before:
				Color:
					rgba: [1,1,1,1] if root.state == 'down' else [0,0,0,0]
				RoundedRectangle:
					pos: self.pos
					size: self.size
					radius: [0, dp(6), dp(6), 0]
	Text:
		text: root.icon
		color: [1,1,1,1]
		halgin: 'center'
		font_size: app.fonts.size.h2
		size_hint_x: None
		width:dp(30)
	Text:
		text: root.text
		color: [1,1,1,1]
		font_size: app.fonts.size.h6
		width:dp (24)			
